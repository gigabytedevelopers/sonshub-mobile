<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.downloads.AudioDownloadedFragment">

    <TextView
        android:id="@+id/noDownload_songs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-48dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/no_downloaded_audio"
        android:visibility="gone"
        android:textColor="@color/grey"
        android:fontFamily="@font/petitabold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDownloadedAudio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="@dimen/padding_mini"/>

</RelativeLayout>